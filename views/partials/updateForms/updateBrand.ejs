<form action="/brands/:id/update" method="post">
        <input type="text" name="brand_id" value="<%= brand.id %>" style="display: none;">

    <label for="newBrand">Brand</label>
    <input type="text" name="newBrand" id="" value="<%=brand.brand_name%>">
    

    <label for="newBrandCategory">Category</label>
    <input type="checkbox" name="newBrandCategory" value="option1"> Option 1
    <input type="checkbox" name="newBrandCategory" value="option2"> Option 2
    <input type="checkbox" name="newBrandCategory" value="option3"> Option 3
    <label>
        <input type="checkbox" name="otherCheckbox" value="other" id="categorySelect"> Other
    </label>
    <input type="text" name="otherProduct" placeholder="Please specify" style="display: none;" id="otherCategoryInput">


    <input type="text" name="otherCategory" placeholder="Please specify" id="otherCategoryInput" style="display: none;">
    <label for="newBrandProd">Associated Products</label>
    <input type="checkbox" name="newBrandProd" value="option1"> Option 1
    <input type="checkbox" name="newBrandProd" value="option2"> Option 2
    <input type="checkbox" name="newBrandProd" value="option3"> Option 3
    <label>
        <input type="checkbox" name="otherCheckbox" value="other" id="productSelect"> Other
    </label>
    <input type="text" name="otherProduct" placeholder="Please specify" style="display: none;" , id="otherProductInput">

    <button type="submit">Submit</button>
</form>

<script>
    const categorySelect = document.getElementById('categorySelect');
    const otherCategoryInput = document.getElementById('otherCategoryInput');

    const otherCheckbox = document.getElementById('productSelect');
    const otherProductInput = document.getElementById('otherProductInput');

    categorySelect.addEventListener('change', () => {
        if (categorySelect.checked) {
            otherCategoryInput.style.display = 'block';
        } else {
            otherCategoryInput.style.display = 'none';
        }
    });

    otherCheckbox.addEventListener('change', () => {
        if (otherCheckbox.checked) {
            otherProductInput.style.display = 'block';
        } else {
            otherProductInput.style.display = 'none';
        }
    });
</script>